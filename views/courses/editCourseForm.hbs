<h4>Edit {{course.name}}</h4>

<form action="/courses/{{course._id}}?_method=PUT" method="POST">
    <input class="form" type="text" name="name" placeholder="Name" value="{{course.name}}"/>
    <input class="form" type="text" name="photo" placeholder="Photo" value="{{course.photo}}"/>
    <input class="form" type="text" name="location" placeholder="Location" value="{{course.location}}"/>
    <select class="form" name="ablility" placeholder="Ability" value="{{course.difficulty}}">
    <option value="Easy">Easy</option>
    <option value="Hard">Hard</option>
    <option value="Pro">Pro</option>
    </select>

    <input class="form" type="submit" value="Save"/>
</form>
<a href="/start/">
        <button>Home</button>
    </a>