<h2>Create New Course</h2>

<form action="/courses" method="POST">
    <input class="form" type="text" name="name" required="required" placeholder="Name" />
    <input class="form" type="text" name="photo" placeholder="Photo" />
    <input class="form" type="text" name="location" placeholder="Location" />
    <select class="form" name="difficulty" required="required" list="difficulty-options" placeholder="Difficulty" />
        <option value="Easy">Easy</option>
        <option value="Medium">Medium</option>
        <option value="Hard">Hard</option>
        <option value="Pro">Pro</option>
    </select>

    <input class="form" type="submit" value="Create" />
</form>
<a href="/courses">
    <button>Back</button>
</a>
<a href="/">
    <button>Home</button>
</a>