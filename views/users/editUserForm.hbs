<h4>Edit {{user.name}}</h4>

<form action="/users/{{user._id}}?_method=PUT" method="POST">
    <input class="form" type="text" name="name" placeholder="Name" value="{{user.name}}"/>
    <input class="form" type="text" name="photo" placeholder="Photo" value="{{user.photo}}"/>
    <input class="form" type="text" name="location" placeholder="Location" value="{{user.location}}"/>
    <select class="form" name="ablility" placeholder="Ability" value="{{user.ability}}">
    <option value="Beginner">Beginner</option>
    <option value="Amatuer">Amatuer</option>
    <option value="Pro">Pro</option>
    </select>

    <input class="form" type="submit" value="Save"/>
</form>