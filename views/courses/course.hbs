<h3>{{course.name}}</h3>

<p>{{course.photo}}</p>
<p>Difficulty: {{course.difficulty}}</p>
<p>Location: {{course.location}}</p>

<a href="/courses/{{course._id}}/edit">
    <button>
        Edit Course
    </button>
</a>

<form action="/courses/{{course._id}}?_method=DELETE" method="POST">
    <input class="form" type="submit" value="Delete Course" />
</form>

<footer>
    <a href="/courses/">
        <button>Home</button>
    </a>
</footer>