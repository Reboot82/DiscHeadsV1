<h2>Create New Course</h2>

<form action="/courses" method="POST">
    <input class="form" type="text" name="name" placeholder="Name"/>
    <input class="form" type="text" name="photo" placeholder="Photo"/>
    <input class="form" type="text" name="location" placeholder="Location"/>
    <select class="form" name="difficulty" placeholder="Difficulty"/>
    <option value="Easy">Easy</option>
    <option value="Hard">Hard</option>
    <option value="Pro">Pro</option>
    </select>
    
    <input class="form" type="submit" value="Create"/>
</form>